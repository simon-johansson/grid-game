{
  "compilerOptions": {
    "target": "es5",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "removeComments": true,
    "noImplicitAny": true,
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "types": ["jest"],
    "outDir": ".tmp",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@domain/*": ["./src/domain/*"],
      "@application/*": ["./src/application/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
