{
  "name": "",
  "version": "1.0.0",
  "description": "",
  "author": "Simon Johansson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "start": "node index.js",
    "build": "run-s build:*",
    "serve": "browser-sync start -s \"dist\" -f \"dist\"",
    "build:assets": "copyfiles -u 1 \"src/**/*.js\" \"src/**/*.css\" \"src/**/*.html\" \"src/**/*.{png,jpg,gif}\" dist",
    "build:scss": "node-sass --output-style compressed -r src -o dist",
    "build:tsc": "browserify --debug src/app.ts -p [ tsify ] > dist/app.js",
    "watch:tsc": "watchify --debug src/app.ts -p [ tsify ] -o dist/app.js",
    "watch:scss": "onchange \"src/**/*.scss\" -- run-s build:scss",
    "watch:assets": "onchange \"src/**/*.js\" \"src/**/*.css\" \"src/**/*.html\" \"src/**/*.{png,jpg,gif}\" -- run-s build:assets",
    "watch": "run-p serve watch:*",
    "postinstall": "npm run build"
  },
  "devDependencies": {
    "browser-sync": "^2.24.7",
    "browserify": "^16.2.2",
    "copyfiles": "^2.1.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "tsify": "^4.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3",
    "watchify": "^3.11.0"
  },
  "dependencies": {
    "node-static": "^0.7.10"
  }
}
